# File system (modern replacements)
alias ls='eza -lh --group-directories-first --icons=auto'
alias lsa='ls -a'
alias lt='eza --tree --level=2 --long --icons --git'
alias lta='lt -a'
alias ll='eza -lah --icons=auto'
alias tree='eza --tree'

# Better cat
alias cat='bat --paging=never'

# FZF file preview
alias ff="fzf --preview 'bat --style=numbers --color=always {}'"

# Navigation with zoxide
alias cd='z'

# Quick navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# Common tools shortcuts
alias v='nvim'
alias vim='nvim'
alias n='nvim .'
alias g='git'
alias d='docker'
alias dc='docker-compose'
alias lzg='lazygit'
alias lzd='lazydocker'
alias t='tmux'
alias ta='tmux attach'
alias tn='tmux new -s'

# Git shortcuts
alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias gcm='git commit -m'
alias gca='git commit --amend'
alias gcam='git commit -a -m'
alias gp='git push'
alias gpl='git pull'
alias gd='git diff'
alias gds='git diff --staged'
alias gco='git checkout'
alias gb='git branch'
alias gl='git log --oneline --graph --decorate'
alias gla='git log --oneline --graph --decorate --all'

# git-delta (if available) - beautiful diff for any files
alias diff='delta 2>/dev/null || diff'

# Docker shortcuts
alias dps='docker ps'
alias dpsa='docker ps -a'
alias di='docker images'
alias dex='docker exec -it'
alias dlogs='docker logs -f'
alias dclean='docker system prune -af'

# Python/UV shortcuts
alias py='python3'
alias uv-init='uv venv && source .venv/bin/activate'
alias uv-activate='source .venv/bin/activate'

# System monitoring
alias top='btop'
alias disk='df -h'
alias meminfo='free -h'

# Safety nets
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# Quick edits (shell-agnostic)
alias editrc='nvim ${ZDOTDIR:-$HOME}/.${SHELL##*/}rc && exec ${SHELL##*/}'
alias aliases='nvim ~/.${SHELL##*/}/aliases && exec ${SHELL##*/}'
alias functions='nvim ~/.${SHELL##*/}/functions && exec ${SHELL##*/}'
alias tmuxconf='nvim ~/.tmux.conf'

# Network - platform-aware port listing
# macOS uses lsof, Linux uses netstat
if [[ "$OSTYPE" == "darwin"* ]]; then
  alias ports='lsof -iTCP -sTCP:LISTEN -n -P'
else
  alias ports='netstat -tulanp'
fi

# Misc
alias c='clear'
alias h='history'
alias j='jobs -l'
alias path='echo -e ${PATH//:/\\n}'
alias now='date +"%T"'
alias today='date +"%Y-%m-%d"'
alias week='date +"%V"'
alias reload='exec ${SHELL##*/} && echo "âœ… Shell reloaded"'

# System update - platform-aware
if [[ "$OSTYPE" == "darwin"* ]]; then
  alias update-system='brew update && brew upgrade && brew cleanup'
else
  alias update-system='sudo apt update && sudo apt upgrade -y && sudo apt autoremove -y'
fi

